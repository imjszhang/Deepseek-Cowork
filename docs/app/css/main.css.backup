  padding: 10px 12px;
  background: var(--muted);
  border: 1px solid var(--border);
  border-radius: 6px;
  color: var(--foreground);
  font-size: 14px;
}

.change-server-dialog .setting-item input:focus {
  border-color: var(--accent-primary);
  outline: none;
}

.change-server-dialog .setting-item input.muted {
  color: var(--muted-foreground);
  background: var(--card);
}

.change-server-dialog .setting-hint {
  font-size: 12px;
  color: var(--muted-foreground);
  margin-top: 4px;
}

/* 警告框 */
.warning-box {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: 8px;
  padding: 14px 16px;
  margin-top: 8px;
}

.warning-title {
  font-size: 14px;
  font-weight: 600;
  color: var(--destructive);
  margin: 0 0 8px 0;
}

.warning-text {
  font-size: 13px;
  color: var(--muted-foreground);
  margin: 0 0 8px 0;
}

.warning-list {
  margin: 0;
  padding-left: 20px;
  font-size: 13px;
  color: var(--muted-foreground);
  line-height: 1.6;
}

.warning-list li {
  margin-bottom: 2px;
}

/* 危险按钮（实心） */
.btn-danger {
  padding: 10px 20px;
  background: var(--destructive);
  border: none;
  border-radius: 6px;
  color: white;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
}

.btn-danger:hover {
  background: #dc2626;
}

.btn-danger:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ============ 设置向导样式 ============ */

.wizard-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--background);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.wizard-container {
  width: 100%;
  max-width: 640px;
  background: var(--card);
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(20px);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.wizard-header {
  padding: 32px 32px 24px;
  text-align: center;
  border-bottom: 1px solid var(--border);
}

.wizard-title {
  font-size: 24px;
  font-weight: 600;
  color: var(--foreground);
  margin: 0 0 8px;
}

.wizard-subtitle {
  font-size: 14px;
  color: var(--muted-foreground);
  margin: 0;
}

/* 步骤指示器 */
.wizard-steps {
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 20px 32px;
  background: var(--muted);
}

.wizard-step {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  border-radius: 20px;
  background: transparent;
  transition: all 0.2s ease;
}

.wizard-step.active {
  background: var(--primary);
}

.wizard-step.completed {
  background: var(--success);
}

.step-number {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: var(--accent);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 600;
  color: var(--muted-foreground);
}

.wizard-step.active .step-number,
.wizard-step.completed .step-number {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.step-label {
  font-size: 13px;
  color: var(--muted-foreground);
}

.wizard-step.active .step-label,
.wizard-step.completed .step-label {
  color: white;
}

/* 步骤内容区 */
.wizard-content {
  padding: 0;
}

.wizard-step-content {
  display: none;
  padding: 32px;
}

.wizard-step-content.active {
  display: block;
  animation: fadeIn 0.2s ease;
}

.step-header {
  margin-bottom: 24px;
}

.step-header h3 {
  font-size: 18px;
  font-weight: 600;
  color: var(--foreground);
  margin: 0 0 8px;
}

.step-header p {
  font-size: 14px;
  color: var(--muted-foreground);
  margin: 0;
}

/* 需求列表 */
.requirements-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 24px;
}

.requirement-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: var(--muted);
  border-radius: 8px;
  border: 1px solid var(--border);
}

.requirement-item.critical {
  border-left: 3px solid var(--destructive);
}

.requirement-item.recommended {
  border-left: 3px solid var(--warning);
}

.requirement-item.installed,
.requirement-item.configured {
  border-left: 3px solid var(--success);
}

.requirement-icon {
  font-size: 24px;
  width: 32px;
  text-align: center;
}

.requirement-info {
  flex: 1;
}

.requirement-name {
  font-size: 14px;
  font-weight: 500;
  color: var(--foreground);
  margin-bottom: 2px;
}

.requirement-status {
  font-size: 12px;
  color: var(--muted-foreground);
}

.requirement-badge {
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 500;
}

.requirement-badge.missing {
  background: rgba(239, 68, 68, 0.15);
  color: var(--destructive);
}

.requirement-badge.installed,
.requirement-badge.configured {
  background: rgba(34, 197, 94, 0.15);
  color: var(--success);
}

/* 安装指南 */
.install-guide {
  margin-bottom: 24px;
}

.install-status {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: var(--muted);
  border-radius: 8px;
  margin-bottom: 16px;
}

.install-status .status-icon {
  font-size: 24px;
}

.install-status .status-text {
  font-size: 14px;
  color: var(--foreground);
}

.install-status.success {
  background: rgba(34, 197, 94, 0.1);
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.install-status.success .status-text {
  color: var(--success);
}

.install-methods {
  margin-bottom: 16px;
}

.install-method {
  padding: 12px 16px;
  background: var(--muted);
  border-radius: 8px;
  margin-bottom: 8px;
  cursor: pointer;
  transition: all 0.15s ease;
  border: 1px solid transparent;
}

.install-method:hover {
  border-color: var(--primary);
}

.install-method.selected {
  border-color: var(--primary);
  background: rgba(59, 130, 246, 0.1);
}

.install-method-name {
  font-size: 14px;
  font-weight: 500;
  color: var(--foreground);
}

.install-command-box {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: #1e1e1e;
  border-radius: 8px;
  border: 1px solid var(--border);
  margin-bottom: 16px;
}

.install-command-box code {
  flex: 1;
  font-family: var(--font-mono, 'JetBrains Mono', monospace);
  font-size: 13px;
  color: var(--success);
  word-break: break-all;
  user-select: text;
}

.install-command-box .btn-copy {
  padding: 6px 12px;
  background: var(--accent);
  border: 1px solid var(--border);
  border-radius: 6px;
  color: var(--muted-foreground);
  cursor: pointer;
  transition: all 0.15s ease;
  font-size: 13px;
}

.install-command-box .btn-copy:hover {
  background: var(--muted);
  color: var(--foreground);
}

.install-command-box .btn-copy.copied {
  background: rgba(34, 197, 94, 0.2);
  border-color: var(--success);
  color: var(--success);
}

.install-links {
  display: flex;
  gap: 12px;
}

.install-links .btn-link {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  background: transparent;
  border: 1px solid var(--border);
  border-radius: 6px;
  color: var(--muted-foreground);
  font-size: 13px;
  cursor: pointer;
  transition: all 0.15s ease;
}

.install-links .btn-link:hover {
  border-color: var(--primary);
  color: var(--primary);
}

/* API 配置表单 */
.api-config-form {
  margin-bottom: 24px;
}

.api-config-form .form-group {
  margin-bottom: 20px;
}

.api-config-form label {
  display: block;
  font-size: 13px;
  font-weight: 500;
  color: var(--muted-foreground);
  margin-bottom: 8px;
}

.api-config-form .form-select,
.api-config-form .form-input {
  width: 100%;
  padding: 12px 16px;
  background: var(--muted);
  border: 1px solid var(--border);
  border-radius: 8px;
  color: var(--foreground);
  font-size: 14px;
  transition: border-color 0.15s ease;
}

.api-config-form .form-select:focus,
.api-config-form .form-input:focus {
  border-color: var(--primary);
  outline: none;
}

.api-config-form .form-hint {
  font-size: 12px;
  color: var(--muted-foreground);
  margin-top: 6px;
}

.input-with-action {
  display: flex;
  gap: 8px;
}

.input-with-action .form-input {
  flex: 1;
}

.input-with-action .btn-icon {
  padding: 12px 16px;
  background: var(--muted);
  border: 1px solid var(--border);
  border-radius: 8px;
  color: var(--muted-foreground);
  cursor: pointer;
  transition: all 0.15s ease;
}

.input-with-action .btn-icon:hover {
  background: var(--accent);
  color: var(--foreground);
}

.api-config-status {
  font-size: 13px;
  padding: 12px 16px;
  border-radius: 8px;
  margin-top: 8px;
}

.api-config-status.error {
  background: rgba(239, 68, 68, 0.1);
  color: var(--destructive);
}

.api-config-status.success {
  background: rgba(34, 197, 94, 0.1);
  color: var(--success);
}

/* 完成页 */
.complete-header {
  text-align: center;
}

.complete-icon {
  font-size: 64px;
  margin-bottom: 16px;
}

.config-summary {
  background: var(--muted);
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 24px;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid var(--border);
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 13px;
  color: var(--muted-foreground);
}

.summary-value {
  font-size: 13px;
  color: var(--foreground);
  font-weight: 500;
}

/* 步骤操作按钮 */
.step-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  padding-top: 16px;
  border-top: 1px solid var(--border);
}

.step-actions.center {
  justify-content: center;
}

.step-actions .btn-primary {
  padding: 12px 24px;
  background: var(--primary);
  border: none;
  border-radius: 8px;
  color: var(--primary-foreground);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
}

.step-actions .btn-primary:hover {
  background: #2563eb;
}

.step-actions .btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.step-actions .btn-primary.btn-large {
  padding: 16px 48px;
  font-size: 16px;
}

.step-actions .btn-secondary {
  padding: 12px 24px;
  background: transparent;
  border: 1px solid var(--border);
  border-radius: 8px;
  color: var(--muted-foreground);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
}

.step-actions .btn-secondary:hover {
  background: var(--accent);
  color: var(--foreground);
}

/* 设置向导入口 */
.env-wizard-entry {
  margin-top: 20px;
  padding-top: 16px;
  border-top: 1px solid var(--border);
}

.env-wizard-entry .btn-secondary-sm {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  background: var(--muted);
  border: 1px solid var(--border);
  border-radius: 6px;
  color: var(--muted-foreground);
  font-size: 13px;
  cursor: pointer;
  transition: all 0.15s ease;
}

.env-wizard-entry .btn-secondary-sm:hover {
  background: var(--accent);
  border-color: var(--primary);
  color: var(--foreground);
}

.env-wizard-entry .setting-hint {
  margin-top: 8px;
  font-size: 12px;
  color: var(--muted-foreground);
}

/* ============ 动效系统 (Phase 4) ============ */

/* 面板切换动画 */
.panel {
  opacity: 0;
  transform: translateY(8px);
  transition: opacity var(--transition-normal), transform var(--transition-normal);
}

.panel.active {
  opacity: 1;
  transform: translateY(0);
}

/* 列表项入场动画 */
@keyframes listItemIn {
  from {
    opacity: 0;
    transform: translateX(-8px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.tab-item,
.file-item {
  animation: listItemIn var(--transition-normal) ease-out;
  animation-fill-mode: both;
}

/* 列表项依次入场 */
.tab-item:nth-child(1) { animation-delay: 0ms; }
.tab-item:nth-child(2) { animation-delay: 30ms; }
.tab-item:nth-child(3) { animation-delay: 60ms; }
.tab-item:nth-child(4) { animation-delay: 90ms; }
.tab-item:nth-child(5) { animation-delay: 120ms; }
.tab-item:nth-child(n+6) { animation-delay: 150ms; }

.file-item:nth-child(1) { animation-delay: 0ms; }
.file-item:nth-child(2) { animation-delay: 20ms; }
.file-item:nth-child(3) { animation-delay: 40ms; }
.file-item:nth-child(4) { animation-delay: 60ms; }
.file-item:nth-child(5) { animation-delay: 80ms; }
.file-item:nth-child(n+6) { animation-delay: 100ms; }

/* 状态指示器 glow 效果 */
.status-dot,
.ai-status-dot,
.daemon-status-dot,
.status-dot-sm {
  transition: all var(--transition-fast);
}

.status-indicator.running .status-dot,
.ai-status.connected .ai-status-dot,
.daemon-status-dot.running,
.status-dot-sm.connected {
  box-shadow: 0 0 8px var(--success), 0 0 16px hsla(142, 76%, 36%, 0.3);
}

.status-indicator.starting .status-dot,
.daemon-status-dot.starting,
.daemon-status-dot.restarting,
.status-dot-sm.pending {
  box-shadow: 0 0 8px var(--warning), 0 0 16px hsla(48, 96%, 53%, 0.3);
}

/* 改进的脉冲动画 */
@keyframes pulseGlow {
  0%, 100% {
    opacity: 1;
    box-shadow: 0 0 8px currentColor, 0 0 16px currentColor;
  }
  50% {
    opacity: 0.6;
    box-shadow: 0 0 12px currentColor, 0 0 24px currentColor;
  }
}

.status-indicator.starting .status-dot,
.daemon-status-dot.starting,
.daemon-status-dot.restarting {
  animation: pulseGlow 1.5s ease-in-out infinite;
}

/* 加载 Spinner 动画改进 */
.loading-spinner {
  border: 3px solid var(--border);
  border-top-color: var(--primary);
  animation: spinSmooth 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes spinSmooth {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 进度条动画 */
.context-fill {
  transition: width var(--transition-slow), background-color var(--transition-normal);
}

/* 消息入场动画 */
@keyframes messageIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ai-message {
  animation: messageIn var(--transition-normal) ease-out;
}

/* 工具卡片展开/折叠动画 */
.tool-content {
  transition: max-height var(--transition-normal), padding var(--transition-normal), opacity var(--transition-fast);
}

.tool-content.collapsed {
  opacity: 0;
}

/* 按钮 ripple 效果 (可选) */
.btn-primary,
.btn-secondary,
.action-btn {
  position: relative;
  overflow: hidden;
}

/* 侧边栏导航指示器动画 */
.nav-btn.active::before {
  animation: slideIndicatorIn var(--transition-normal) ease-out;
}

@keyframes slideIndicatorIn {
  from {
    transform: translateY(-50%) scaleY(0);
    opacity: 0;
  }
  to {
    transform: translateY(-50%) scaleY(1);
    opacity: 1;
  }
}

/* 右键菜单入场动画 */
.context-menu {
  animation: contextMenuIn var(--transition-fast) ease-out;
}

@keyframes contextMenuIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Toast/通知入场动画 */
@keyframes toastSlideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes toastSlideOut {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(100%);
    opacity: 0;
  }
}

/* 向导步骤切换动画 */
.wizard-step-content {
  animation: wizardStepIn var(--transition-normal) ease-out;
}

@keyframes wizardStepIn {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 骨架屏动画 (加载占位) */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  background: linear-gradient(
    90deg,
    var(--muted) 25%,
    var(--accent) 50%,
    var(--muted) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: var(--radius);
}

/* 悬停状态高亮效果 */
.tab-item:hover,
.file-item:hover,
.context-menu-item:hover {
  transition: background-color var(--transition-fast), border-color var(--transition-fast);
}

/* 聚焦环动画 */
@keyframes focusRing {
  from {
    outline-offset: 0px;
  }
  to {
    outline-offset: 2px;
  }
}

/* SVG 图标统一样式 */
svg {
  transition: transform var(--transition-fast), stroke var(--transition-fast);
}

button:hover svg,
a:hover svg {
  transform: scale(1.05);
}

button:active svg,
a:active svg {
  transform: scale(0.95);
}

/* 减少动画 (辅助功能) */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* ============ 主题特殊样式适配 ============ */

/* 浅色主题滚动条 */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--card);
}

::-webkit-scrollbar-thumb {
  background: var(--border);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--muted-foreground);
}

/* 深色主题滚动条 */
.dark::-webkit-scrollbar-track {
  background: var(--background);
}

.dark::-webkit-scrollbar-thumb {
  background: var(--border);
}

.dark::-webkit-scrollbar-thumb:hover {
  background: var(--muted-foreground);
}

/* macOS 窗口按钮 - 浅色主题非活动状态 */
body.window-inactive .window-btn.macos {
  background: var(--border);
}

/* 深色主题非活动状态 */
.dark.window-inactive .window-btn.macos {
  background: #555;
}

/* 模态框遮罩 - 主题适配 */
.modal-overlay {
  background: var(--overlay);
}

/* 模态框阴影 - 主题适配 */
.modal-dialog {
  box-shadow: var(--modal-shadow);
}

/* 右键菜单阴影 */
.context-menu {
  box-shadow: var(--shadow-lg);
}

/* 卡片阴影 */
.tool-card,
.account-card,
.env-item {
  box-shadow: var(--shadow-sm);
}

/* 设置向导容器 */
.wizard-container {
  box-shadow: var(--shadow-lg);
}

/* 按钮在浅色主题下的特殊样式 */
.btn-primary:hover {
  background: hsl(0 0% 15%);
}

.dark .btn-primary:hover {
  background: hsl(0 0% 85%);
}

/* 输入框聚焦阴影 - 浅色 */
.setting-item input:focus,
.modal-body input:focus {
  box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
}

/* 输入框聚焦阴影 - 深色 */
.dark .setting-item input:focus,
.dark .modal-body input:focus {
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.15);
}

/* 状态指示器 glow - 深色增强 */
.dark .status-indicator.running .status-dot,
.dark .ai-status.connected .ai-status-dot,
.dark .daemon-status-dot.running,
.dark .status-dot-sm.connected {
  box-shadow: 0 0 10px var(--success), 0 0 20px hsla(142, 76%, 36%, 0.4);
}

/* 空状态图标 - 主题适配 */
.empty-icon svg,
.welcome-icon svg {
  opacity: 0.6;
}

.dark .empty-icon svg,
.dark .welcome-icon svg {
  opacity: 0.5;
}

/* 代码块 - 主题适配 */
.markdown-content pre {
  border: 1px solid var(--border);
}

.dark .markdown-content pre {
  border-color: transparent;
}

/* 分隔线 - 主题适配 */
.info-divider {
  color: var(--border);
}

/* 底部状态栏 - 主题边框 */
#status-bar {
  border-top: 1px solid var(--border);
}

/* 侧边栏 - 主题边框 */
#sidebar {
  border-right: 1px solid var(--border);
}

/* 标题栏 - 主题边框 */
#titlebar {
  border-bottom: 1px solid var(--border);
}

/* 面板头部 - 主题边框 */
.panel-header {
  border-bottom: 1px solid var(--border);
}

/* ============ 全局过渡效果 (玻璃态设计) ============ */

/* 主题过渡动画 */
body,
body * {
  transition-property: background-color, border-color, color, fill, stroke, box-shadow;
  transition-duration: var(--duration-normal, 200ms);
  transition-timing-function: var(--ease-smooth, cubic-bezier(0.25, 0.46, 0.45, 0.94));
}

/* 排除需要即时响应的元素 */
button,
a,
input,
select,
textarea,
.loading-spinner,
.status-dot,
.ai-status-dot,
.daemon-status-dot {
  transition-property: background-color, border-color, color, transform, opacity, box-shadow;
  transition-duration: var(--duration-fast, 150ms);
  transition-timing-function: var(--ease-smooth, cubic-bezier(0.25, 0.46, 0.45, 0.94));
}

/* 玻璃态组件全局过渡 */
.glass-card,
.glass-badge,
.badge-glass,
.btn-glass,
.btn-glass-sm,
.btn-glass-secondary,
.btn-glass-icon,
.card,
.env-item,
.account-card,
.tool-card {
  transition: all 0.3s var(--ease-smooth, cubic-bezier(0.25, 0.46, 0.45, 0.94));
}

/* 悬停效果统一增强 */
.card:hover,
.env-item:hover,
.account-card:hover,
.tool-card:hover {
  box-shadow: var(--shadow-glass, 0 8px 32px rgba(0, 0, 0, 0.3));
}
