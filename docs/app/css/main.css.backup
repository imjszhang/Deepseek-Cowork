}

.success-hint {
  font-size: 14px;
  color: var(--muted-foreground);
}

.setup-complete-dialog .modal-footer {
  justify-content: center;
  border-top: none;
  padding-top: 8px;
}

.setup-complete-dialog .btn-primary {
  min-width: 120px;
}

