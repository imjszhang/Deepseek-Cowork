}

.secret-display-container {
  position: relative;
  margin-bottom: 12px;
}

.secret-display {
  display: block;
  width: 100%;
  padding: 16px;
  padding-right: 80px;
  background: var(--background);
  border: 1px solid var(--border);
  border-radius: 8px;
  font-family: var(--font-mono, 'JetBrains Mono', monospace);
