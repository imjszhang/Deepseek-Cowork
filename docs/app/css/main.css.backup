  display: flex;
  flex-direction: column;
  gap: 12px;
}

.account-status-row {
  display: flex;
  gap: 24px;
}

.account-status-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.account-status-item.full-width {
  flex: 1;
}

.account-label {
  font-size: 11px;
  color: var(--muted-foreground);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.account-value {
