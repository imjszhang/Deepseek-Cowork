}

.welcome-setup-dialog .modal-header h3 {
  font-size: 20px;
}

.welcome-setup-body {
  text-align: center;
}

.welcome-description {
  color: var(--muted-foreground);
  font-size: 14px;
  margin-bottom: 24px;
