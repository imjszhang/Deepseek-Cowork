  margin-bottom: 8px;
}

.format-list {
  list-style: none;
  margin-bottom: 16px;
  padding-left: 8px;
}

.format-list li {
  color: var(--muted-foreground);
  font-size: 12px;
  margin-bottom: 4px;
  font-family: var(--font-mono, 'JetBrains Mono', monospace);
}

.format-list li::before {
  content: "•";
