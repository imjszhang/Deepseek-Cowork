}

.copy-status {
  font-size: 12px;
  text-align: center;
  margin-bottom: 12px;
}

.copy-status.success {
  color: var(--success);
}

.copy-status.error {
  color: var(--destructive);
}

.backup-confirm {
  padding: 12px 0;
  border-top: 1px solid var(--border);
  margin-top: 12px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  font-size: 14px;
  color: var(--muted-foreground);
}

.checkbox-label input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: var(--primary);
  cursor: pointer;
}

.checkbox-label:hover {
  color: var(--foreground);
}

/* Secret 输入对话框 */
.secret-input-dialog {
  min-width: 460px;
  max-width: 540px;
}

.input-hint {
  color: var(--muted-foreground);
