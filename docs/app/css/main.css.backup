}

.welcome-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 20px;
}

.welcome-option-btn {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 16px 20px;
  background: var(--muted);
  border: 1px solid var(--border);
  border-radius: 12px;
  cursor: pointer;
