/* Secret 备份对话框 */
.secret-backup-dialog {
  min-width: 480px;
  max-width: 560px;
}

.backup-warning {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 14px 16px;
  background: rgba(234, 179, 8, 0.1);
  border: 1px solid rgba(234, 179, 8, 0.3);
  border-radius: 8px;
  margin-bottom: 20px;
}

.backup-warning .warning-icon {
  font-size: 20px;
